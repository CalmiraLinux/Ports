#!/bin/bash
# Build package sysvinit from port
# Port created by Linuxoid85
#
# (C) 2021 Michail [Linuxoid85] Krasnov <linuxoid85@gmail.com>

cd /usr/src

VERSION="3.00"

wget https://lx4u.ru/downloads/packages/sysvinit-$VERSION.tar.xz https://raw.githubusercontent.com/Linux4Yourself/Linux4Yourself.Book.Packages/develop/patches/sysvinit-2.99-consolidated-1.patch
tar -xf sysvinit-$VERSION.tar.xz
cd sysvinit-$VERSION

patch -Np1 -i ../sysvinit-2.99-consolidated-1.patch

make
make install
